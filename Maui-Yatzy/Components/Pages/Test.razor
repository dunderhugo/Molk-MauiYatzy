@page "/test"

@* Här kodar man stilen, med CSS *@
<style>
	h1{
		color:red;
	}
	.testText{
		color: darkgrey;
	}
</style>

@* Här kodar man HTML*@
<h1>Counter</h1>
<p class="testText">This is a test text</p>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>


@* Här kodar man C#*@
@code {
	private int currentCount = 0;

	private void IncrementCount()
	{
		currentCount++;
	}
}